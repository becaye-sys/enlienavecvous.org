{% extends "account_layout.html.twig" %}

{% block heading %}
    <div class="page-title-icon">
        <i class="pe-7s-mail icon-gradient bg-mean-fruit">
        </i>
    </div>
    <div>
        Envoi d'un mail à tous les utilisateurs
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <form action="{{ path('manager_contact_by_roles') }}" method="post">
                    <fieldset class="form-group">
                        <label for="subject">Sujet du message</label>
                        <input type="text" name="subject" id="subject" class="form-control">
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="role">Par rôle</label>
                        <select name="role" id="role">
                            <option value="ROLE_THERAPIST">Praticien.nes</option>
                            <option value="ROLE_PATIENT">Demandeur.ses</option>
                        </select>
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="message">Message</label>
                        <textarea name="message" id="message" cols="30" rows="10" class="form-control"></textarea>
                    </fieldset>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}